    description: ''
    queryParameters:
      page:
        description: ''
        type: integer
        default: 1
        example: 2
    responses:
      '200':
        headers:
          Link:
            description: ''
            type: string
            example: >-
              <https://example.com/users&page=1>; rel="prev",
              <https://example.com/users&page=3>; rel="next"
        body:
          application/json:
            description: ''
            schema: UserList
            example: |-
              [
                {
                  "id": 1,
                  "username": "nicol",
                  "created_at": "2000-01-01T00:00:00.000Z",
