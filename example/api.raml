              "created_at": "2000-01-01T00:00:00.000Z",
              "updated_at": "2000-01-01T00:00:00.000Z"
            }
    responses:
      '201':
        body:
          application/json:
            description: ''
            schema: User
            example: |2-
                {
                  "id": 100000,
                  "username": "jack",
                  "password": "hogehoge",
